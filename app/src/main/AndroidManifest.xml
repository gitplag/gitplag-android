<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.gitplag.gitplag.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="io.gitplag.android.GitplagAndroidApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="io.gitplag.android.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="io.gitplag.android.activity.RepositoryActivity" />
        <activity android:name="io.gitplag.android.activity.RepositoryListActivity" />
        <activity android:name="io.gitplag.android.activity.AnalysisActivity" />
    </application>

</manifest>